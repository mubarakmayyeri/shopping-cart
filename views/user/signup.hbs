<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5" style="width: 30rem;">
            <h2 class="text-center">Create new account</h2>
            <form class="p-3" action="/signup" method="post">
                <div class="form-group">
                    <label for="exampleInputName">Name</label>
                    <input type="name" class="form-control" name="Name" id="exampleInputName" placeholder="Enter name">
                </div>
                <div class="form-group mt-3">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group mt-3">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="Password" id="exampleInputPassword1" placeholder="Enter password">
                </div>
                <a href="/login" style="text-decoration: none;">Already have an account?</a>
                <div class="d-flex justify-content-center mt-3 float-right">
                    <button type="submit" class="btn btn-primary float-left">Sign Up</button>
                </div>

            </form>
        </div>
    </div>
</div>