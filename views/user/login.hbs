<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5" style="width: 30rem;">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" name="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="Password" class="form-control" id="exampleInputPassword1">
                </div>
                {{#if loginErr}}
                <p class="error text-danger mt-4">Invalid Username or password</p>
                {{/if}}
                <a href="/signup" style="text-decoration: none;">Don't have an account?</a>
                <div class="d-flex justify-content-center mt-3 float-right">
                    <button type="submit" class="btn btn-primary float-left">Login</button>
                </div>

            </form>
        </div>
    </div>
</div>